<div class="col-sm-6 col-sm-offset-3">

    <h1>Edit <%= user.local.name %></h1>



    <form action="<%= '/users/'+ user._id %>" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="local.name" value=<%= user.local.name %>>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="local.email" value=<%= user.local.email %>>
        </div>
        <div class="form-group">
            <label>Profile Pic</label>
            <input type="text" class="form-control" name="local.avatar" value=<%= user.local.avatar %>>
        </div>
        <div class="form-group">
            <label>Bio</label>
            <input type="text" class="form-control" name="local.bio" value=<%= user.local.bio %>>
        </div>
        <div class="form-group">
            <label>location</label>
            <input type="text" class="form-control" name="local.location" value=<%= user.local.location %>>
        </div>
        <div class="form-group">
            <label>Age</label>
            <input type="number" class="form-control" name="local.age" value=<%= user.local.age %>>
        </div>
        <div class="form-group">
            <label>Height</label>
            <input type="number" class="form-control" name="local.height" value=<%= user.local.height %>>
        </div>
        <div class="form-group">
            <label>Ethnicity</label>
            <input type="text" class="form-control" name="local.ethnicity" value=<%= user.local.ethnicity %>>
        </div>
        <div class="form-group">
            <label>Interested In?</label>
            <input type="text" class="form-control" name="local.interestedIn" value=<%= user.local.interestedIn %>>
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Edit</button>
    </form>

    <hr>

    <p>Or, <a href="/login">Login</a></p>
    <p>Go back <a href="/">home</a>.</p>

</div>
